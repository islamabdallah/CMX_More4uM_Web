<div class="row mt-4">
    <div class="col-lg-8 mb-lg-0 mb-4">
        @*   <select class="form-control form-select col-md-1" placeholder="Select UserName"
        name="UserName" id="select-users" value="Gift.UserName" asp-items="@(new SelectList(ViewBag.giftt, nameof(Gift.RequestNumber), nameof(Gift.UserName),""))"
        onchange="getfilter(this.value,@JsonSerializer.Serialize(Model));"> <option value="">Select User</option></select> *@
        

      
            <div class="card p-4" id="RequestNumber">
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="d-flex flex-column">

                                <p class="mb-1 pt-2 text-bold">Medical Request</p>
                                @* <h5 class="font-weight-bolder"><span class="font-weight-bolder text-gradient text-primary">@item.BenefitName</span></h5> *@
                                <h5 class="font-weight-bolder text-gradient text-info">
                                    Add Request
                                </h5>
                                <hr class="horizontal dark my-sm-4">
                            <div class="row">
                                <div class="form-group col-lg-6" style="margin-bottom:15px">
                                    <p class="mb-5">
                                        RequestType
                                        <select class="form-select" id="RequestNumber"
                                                onchange="myFunction(this.value)">
                                            <option value="">Select User</option>
                                            <option value="1">Medication</option>
                                            <option value="2">Checkup</option>
                                            <option value="3">Sick Leave</option>
                                        </select>
                                    </p>
                                </div>
                               
                                <div class="form-group col-lg-3" style="margin-bottom:15px">
                                    <p class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                                            <label class="form-check-label" for="gridRadios1">
                                                Self Request
                                            </label>
                                        </div>
                                    </p>
                                </div>
                                <div class="form-group col-lg-3" style="margin-bottom:15px">
                                    <p class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2" disabled>
                                            <label class="form-check-label" for="gridRadios2">
                                                Relatives Request
                                            </label>
                                        </div>
                                    </p>
                                </div>

                                <div class="form-group col-lg-6" style="margin-bottom:15px" hidden>
                                <p class="mb-5">
                                    Relatives
                                    <input id="SupervisorId" class=" form-control" name="SendToId">
                                </p>
                            </div>
                                <p class="mb-5" hidden>
                                    <b>Send By</b> : UserName
                                    <br /><b>Department</b> : UserDepartment
                                    <br /><b>Date </b>: Date.ToShortDateString() , Date.ToShortTimeString()
                                </p>
                              
                       </div>
                          
                          
                           <div>
                                <h5 class="font-weight-bolder text-gradient text-primary">
                                    Add Medication Request
                                </h5>
                                <hr class="horizontal dark my-sm-4">
                                 <form>
                             <div class="row">
                                <div class="form-group col-lg-6" style="margin-bottom:15px">
                                    <p class="mb-5">
                                        Medical Entity
                                        <select class="form-select" id="RequestNumber" asp-items="@(new SelectList(Model.medicationEntities,"MedicalEntityId","MedicalDetailsName"," "))"
                                                onchange="myFunction(this.value)">
                                            <option value="">Select Entity</option>
                                            
                                        </select>
                                    </p>
                                </div>

                                <div class="form-group col-lg-6" style="margin-bottom:15px">
                                    <p class="mb-4">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" id="gridCheck1">
                                            <label class="form-check-label" for="gridCheck1">
                                                Monthly Medication
                                            </label>
                                        </div>
                                    </p>
                                </div>
                                
                                <div class="form-group col-lg-6" style="margin-bottom:15px">
                                    <p class="mb-5">
                                        File Upload
                                        <input class="form-control" type="file" id="formFile" multiple>
                                    </p>
                                </div>
                               
                                <div class="form-group col-lg-6" style="margin-bottom:15px">
                                    <p class="mb-5">
                                        Comment
                                        <textarea class="form-control" style="height: 100px"></textarea>
                                    </p>
                                </div>

                                    <div class="form-group col-lg-6" style="margin-bottom:15px">
                                        @* <p class="mb-5">
                                            Comment *@
                                        <button type="submit" class="btn btn-primary">Submit Form</button>
                                      @*   </p> *@
                                    </div>
                              </div>
                                </form>
                            </div>

                        </div>
                       
                    </div>
                </div>

            </div>
    </div>
   </div>
    <div class="col-lg-4">
        <div class="card p-3">
            <div class="overflow-hidden position-relative border-radius-lg bg-cover h-100">
                <!-- /div> style="background-image: url('../assets/img/ivancik.jpg');"> -->
                <span class="mask bg-gradient-dark"></span>
                <div class="card-body position-relative z-index-1 d-flex flex-column h-100 ">
                    <h5 class="text-white font-weight-bolder mb-4 pt-2">Employee Information</h5>
                    <p class="text-white">employee medical information.</p>
                    <p class="mb-5 text-white">
                        <b>Cemex Id</b> : @Model.RelativesApiModel.CemexId
                        <br /><b>EmployeeName</b> : @Model.RelativesApiModel.EmployeeName
                        <br /><b>Date </b>: @Model.RelativesApiModel.BirthDate.ToShortDateString() 
                        <br /><b>EmployeeDepartment</b> : @Model.RelativesApiModel.EmployeeDepartment
                        <br /><b>MedicalCoverage </b>: @Model.RelativesApiModel.MedicalCoverage
                       
                    </p>
                    <a class="text-white text-sm font-weight-bold mb-0 icon-move-right mt-auto" href="javascript:;">
                        @*       Read More
                        <i class="fas fa-arrow-right text-sm ms-1" aria-hidden="true"></i> *@
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


