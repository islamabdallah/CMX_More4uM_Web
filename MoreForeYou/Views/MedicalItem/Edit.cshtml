@model MoreForYou.Models.Models.MedicalModels.MedicalItem

@{
    ViewData["Title"] = "Medical Item";
    ViewData["SubTitle"] = "Edit";
    ViewData["activ"] = "Items";
    Layout = "~/Views/Shared/_More4ULayout.cshtml";

}
<script src="~/js/JQuery/jquery-3.5.1.js"></script>

<div class="row my-4">
    <div class="col-lg-12 col-md-6 mb-md-0 mb-4">
        <div class="card">
            <div class="card-header pb-0">
                <div class="row">
                    <div class="col-lg-6 col-7">
                        <h6>Edit Medical Item</h6>
                        <p class="text-sm mb-0">
                            <i class="fa fa-check text-info" aria-hidden="true"></i>
                            <span class="font-weight-bold ms-1 text-gradient text-info">Medical Item</span>  Info
                        </p>
                    </div>
                    <div class="col-lg-6 col-5 my-auto text-end">
                        <div class="dropdown float-lg-end pe-4">
                            <a class="cursor-pointer" id="dropdownTable" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa fa-ellipsis-v text-secondary"></i>
                            </a>
                            <ul class="dropdown-menu px-2 py-3 ms-sm-n4 ms-n5" aria-labelledby="dropdownTable">
                                <li><a class="dropdown-item border-radius-md" href="javascript:;">Action</a></li>
                                <li><a class="dropdown-item border-radius-md" href="javascript:;">Another action</a></li>
                                <li><a class="dropdown-item border-radius-md" href="javascript:;">Something else here</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body px-0 pb-2">
                <div class="table-responsive">
                    <div class="card-body p-3">

                        <form class="row g-3" asp-action="Edit" asp-controller="MedicalItem" method="post">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row g-3 form-validation" style="">
                                        <div class="col-md-4">

                                            <label class="form-label text-nowrap" for="val-username">
                                                Category <span class="text-danger">*</span>
                                            </label>
                                            <select class="form-select" id="RequestNumber" asp-for="Category" required>
                                                <option value="">Select Type</option>
                                                <option value="Medication">Medication</option>
                                                <option value="CheckUp">Checkup</option>
                                            </select>

                                        </div>

                                        <div class="col-md-4">

                                            <label class="form-label text-nowrap" for="val">
                                                Item Name <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" asp-for="DrugName" required>

                                        </div>

                                        <div class="col-md-4">
                                            <label class="form-label text-nowrap" for="val-email">
                                                Type <span class="text-danger">*</span>
                                            </label>
                                            <input type="text" class="form-control" id="Type" asp-for="Type" data-toggle="tooltip" data-placement="bottom" title="Type">

                                        </div>

                                        <div class="col-md-4">
                                            <label class="form-label text-nowrap" for="Quantity">
                                                Quantity
                                            </label>
                                            <input type="text" class="form-control" id="Quantity" asp-for="Quantity" data-toggle="tooltip" data-placement="bottom" title="Quantity">
                                        </div>

                                        <div class="col-md-4">
                                            <label class="form-label text-nowrap" for="Dose">
                                                Dose
                                            </label>
                                            <input class="form-control" asp-for="Dose" id="">
                                        </div>

                                    </div>
                                    <div class="card-footer">
                                        <div class="row align-items-center">
       
                                            <div class="col-auto">
                                                <button type="submit" class="btn bg-gradient-info"> Save</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}



